#!/bin/sh
set -e

# shellcheck disable=SC1091
. ./.env

.venv/bin/python -m pip install -r requirements.txt
yarn install

npm run build:min

.venv/bin/python manage.py collectstatic --noinput
.venv/bin/python manage.py migrate

HIVEMIND_PROCESSES=web exec /home/ben/.local/share/go/bin/hivemind --title booklogger >/home/ben/src/booklogger/logs/booklogger.log 2>/home/ben/src/booklogger/logs/booklogger.err
